import React from 'react';
import './styles/GmerStoreItem.css';

// This is a component for each game item in gamer store page
// It will be used to render each product, which is available to users
// Yuanyuan
export function GmerStoreItem({ game }) {
    return (
        <div className="card mb-30">
            <div className="inner">
                <div class="mainImg"><img src={game.gameImageURL} alt="Game Image"/></div>
            </div>
                <div className="card-body text-center">
                    <h4 className="card-title">{game.gameTitle}</h4>
                    <h5 className="card-text"><small>price: </small>${game.gamePrice}</h5>
                    <h5 className="card-text"><small>published by: </small>${game.publishedBy}</h5>
                    <button className="btn btn-sm btn-warning float-right">Add to Cart</button>
            </div>
        </div> 
    );
}

export default GmerStoreItem;